<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>Document</title>
    <!-- material icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp"
      rel="stylesheet">


    <link rel="stylesheet" href = "/css/user.css">
</head>
<body>
    <div class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="./images/img3.jpg">
                    <h2>Smart <span class="danger">Home</span></h2>
                </div>
                <!-- to evala an theloume na einai responsive -->
                <div class="close" id="close-btn">
                    <span class="material-icons-sharp">close</span>
                </div>
            </div>
            <div class="sidebar">
                <a href="user.html" class="active">
                    <span class="material-icons-sharp">house</span>
                    <h3>Homes</h3>
                 </a>
                <a href="new_house.html">
                    <span class="material-icons-sharp">add</span>
                    <h3>Add New House</h3>
                </a>
                <a href="#">
                    <span class="material-icons-sharp">
                        settings
                        </span>
                    <h3>Settings</h3>
                </a>
                <a href="#">
                    <span class="material-icons-sharp">logout</span>
                    <h3>Logout</h3>
                </a>
            </div>
        </aside>

        <!-----------------  END OF ASIDE ---------------->
        
        <main>
            <h1>User</h1>
            
              {{#each data}}
            <div class="insights">

                <div class="home1" id="home1" onclick="location.href='/home_living/{{id}}'" style ="cursor:pointer;">
                  
                    
                    <div class="top">
                        <span class="material-icons-sharp">home</span>
                        <h3>{{username}}</h3>
                    </div>
                    <div class="middle">
                        <div class="left">
                            <h3>Κατανάλωση</h3>
                        </div>
                        <div class="progress">
                            <svg>
                                <circle cx='38' cy='38' r='36'></circle>
                            </svg>
                            <div class="number">
                                <p>
                                    {{kw}}kw
                                </p>
                            </div>
                        </div>
                    </div>
                    <small class="text-muted">
                        The Last 24 Hours
                    </small>
                </div>
            </div>
            {{/each}}
        </main>
        
        <!-----------------  END OF ASIDE ---------------->
        <div class="right">
            <div class="top">
                <button id="menu-btn">
                    <span class="material-icons-sharp">menu</span>
                </button>
            </div>
        </div>
    </div>
    <script src="/js/admin.js"></script>
</body>
</html>